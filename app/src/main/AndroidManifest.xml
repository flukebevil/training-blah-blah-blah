<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fluke.training">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.result.ResultActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fluke.training.ui.main.HomeActivity" />
        </activity>
        <activity android:name=".ui.detail.movie.DetailMovieActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fluke.training.ui.main.HomeActivity" />
        </activity>
        <activity android:name=".ui.detail.television.DetailTelevisionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fluke.training.ui.main.HomeActivity" />
        </activity>
        <activity android:name=".ui.myfav.ViewMyFavActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fluke.training.ui.main.HomeActivity" />
        </activity>
        <activity android:name=".ui.detail.television.episode.EpisodeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fluke.training.ui.main.HomeActivity" />
        </activity>
        <activity android:name=".ui.later.ViewLaterActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fluke.training.ui.main.HomeActivity" />
        </activity>
    </application>

</manifest>